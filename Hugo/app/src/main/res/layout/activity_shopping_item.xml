<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context="arias.jenifer.wewant2cook.ShoppingItem">

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="?attr/listPreferredItemHeight"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_unidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_nombre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="3"
        android:inputType="textPersonName"
        android:gravity="center_horizontal"
        android:text="unidades"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_unidades"
        android:layout_toLeftOf="@+id/edit_unidades"
        android:layout_toStartOf="@+id/edit_unidades"
        android:ems="3"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:text="cantidad"
        android:textSize="16sp" />

</RelativeLayout>