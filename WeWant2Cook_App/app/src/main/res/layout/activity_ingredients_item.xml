<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llista"
    tools:context="arias.jenifer.wewant2cook.Ingredients_item"
    android:weightSum="1">

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/edit_units"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:inputType="text"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/edit_units"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:layout_alignBaseline="@+id/edit_number"
        android:layout_alignBottom="@+id/edit_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:textSize="16sp"
       />

    <TextView
        android:id="@+id/Ingr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/edit_number"
        android:layout_alignBottom="@+id/edit_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
