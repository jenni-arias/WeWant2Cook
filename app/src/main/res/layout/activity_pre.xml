<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context="arias.jenifer.wewant2cook.PreActivity">

    <TextView
        android:id="@+id/quehacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qué quieres hacer?"
        android:textSize="20sp" />
    <!-- android:layout_marginLeft="25dp"-->
    <Button
        android:id="@+id/btn_nueva_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Crear nueva lista"
        android:layout_below="@+id/quehacer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_unirse_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_nueva_lista"
        android:layout_marginTop="10dp"
        android:text="Unirse a una lista" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Layout_unirse"
        android:layout_below="@+id/btn_unirse_lista">

        <TextView
            android:id="@+id/introducir_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:text="Introduce el código:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/codigo_unirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/introducir_codigo"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_unirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Unirse"
            android:layout_below="@+id/codigo_unirse"
            android:layout_alignRight="@+id/codigo_unirse"
            android:layout_alignEnd="@+id/codigo_unirse" />

    </RelativeLayout>

</RelativeLayout>